<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="fill_horizontal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:onClick="backButton"
        android:scaleType="centerInside"
        android:src="@drawable/backpress" />


    <ImageView
        android:id="@+id/save_state"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:onClick="saveMenu"
        android:scaleType="centerInside"
        android:src="@drawable/save2" />

    <TextView
        android:id="@+id/state_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/back_button"
        android:layout_toLeftOf="@id/save_state"
        android:gravity="center"
        android:textColor="@color/wallet_dim_foreground_inverse_holo_dark"
        />

</RelativeLayout>